<Barcode>:
    orientation: 'vertical'
    BoxLayout:
        size_hint: 1,.08
        size_hint_max_y: 30

        orientation: 'horizontal'
        TextInput:
            id: pin_inputfield
            size_hint: .2, 1
            size_hint_min_x: 20
            multiline: False
            focus: True
            hint_text: "PIN or enter"
            on_text_validate: root.pin_inputfield_entered()

        TextInput:
            id: code_inputfield
            size_hint: 1, 1
            size_hint_min_x: 20
            multiline: False
            focus: True
            hint_text: "Scan barcode"
            on_text_validate: root.code_inputfield_entered()

    CommonWidgets:
